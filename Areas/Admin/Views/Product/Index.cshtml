@model List<GetProductVM>

@{
    int count = 0;
}
<span><a type="button" class="btn btn-success" asp-action="create">Create</a></span>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
   
        @foreach (var product in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><img src="~/img/@product.ImageUrl" alt="Alternate Text" /></td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.CategoryName</td>
                <td>
                    <a type="button" class="btn btn-warning" asp-action="update" asp-route-id="@product.Id">Update</a>
                    <a type="button" class="btn btn-danger" asp-action="delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>